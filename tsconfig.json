{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "unplugin-vue-macros/macros-global",
      "unplugin-icons/types/vue",
      "naive-ui/volar"
    ],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.vue"],
  "exclude": ["dist", "node_modules", "eslint.config.js", "prettier.config.js"]
}
